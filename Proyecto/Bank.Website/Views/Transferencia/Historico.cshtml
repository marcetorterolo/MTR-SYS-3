@model IEnumerable<Transferencia>

@{
    ViewBag.Title = "Historico";
}


<div class="jumbotron">
    <h2>Historico de Transferencias</h2>

    <div class="row">
        <div class="col-xs-12" id="bodyIndex">
            @if (Model != null)
            {
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CuentaIdOrigen)</th>
                            <th>@Html.DisplayNameFor(model => model.CuentaIdDestino)</th>
                            <th>@Html.DisplayNameFor(model => model.Monto)</th>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CuentaIdOrigen)</td>
                            <td>@Html.DisplayFor(modelItem => item.CuentaIdDestino)</td>
                            <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>
<a class="fa fa-angle-double-left" title="Regresar" href="@Url.Action("Index", "Home")"> Regresar</a>

