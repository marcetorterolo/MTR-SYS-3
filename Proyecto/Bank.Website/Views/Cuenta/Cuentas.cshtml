@model IEnumerable<Cuenta>

@{
    ViewBag.Title = "Cuentas";
}

<div class="jumbotron">
    <h2>Cuentas del Usuario</h2>

    <div class="row">
        <div class="col-xs-12" id="bodyIndex">
            @if (Model != null)
            {
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.TipoCuenta.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Saldo)</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.TipoCuenta.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Saldo)</td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>
<a class="fa fa-angle-double-left" title="Regresar" href="@Url.Action("Index", "Home")"> Regresar</a>
